@model Recetario.Models.RecetaDTO
@{
    ViewData["Title"] = "Eliminar Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.Identity.IsAuthenticated)
{
    <h1>Eliminar</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProcentajePromedio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProcentajePromedio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TiempoPrep)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TiempoPrep)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.usuario.NombreActor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.usuario.NombreActor)
            </dd>
        </dl>

        <form asp-action="Eliminar">
            <!--<input type="hidden" asp-for="IdActor" />-->
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Regresar a la lista</a>
        </form>
    </div>
}
else
{
    <h4>Área restringida para administradores. Inicia sesión como administrador para hacer uso de ella</h4>
}